{
	"$schema": "https://www.schemastore.org/chrome-manifest.json",
	"name": "TubiaBuddy",
	"description": "A utility extension for Wikitubia editors. Provides quick data viewing and copying, plus some other niceties",
	"version": "0.1.1",
	"default_locale": "en",
	"manifest_version": 3,
	"incognito": "split",
	"homepage_url": "https://github.com/Wikitubia/tubiabuddy",
	"action": {
		"default_popup": "/popup.html",
		"default_icon": {
			"16": "/assets/icons/icon.png",
			"32": "/assets/icons/icon.png",
			"48": "/assets/icons/icon.png",
			"128": "/assets/icons/icon.png"
		}
	},
	"host_permissions": [
		"https://*.youtube.com/*",
		"https://youtube.com/*"
	],
	"permissions": [
		"activeTab",
		"scripting"
	]
}
